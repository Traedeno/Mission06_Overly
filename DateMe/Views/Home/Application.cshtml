@model App

<h1>Movie Recomendation</h1>
<h3>Enter your movie recomendation below and it will be added to the database</h3>

<form method="post">
    <label>Movie category:</label>
    <input asp-for="Category"/>
    <br />
    <label>Movie title:</label>
    <input asp-for="Title"/>
    <br />
    <label>Release year:</label>
    <input asp-for="Year"/>
    <br />
    <label>Movie Director:</label>
    <input asp-for="Director"/>
    <br />
    <label>What is the movie rated?</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label> Is the movie edited?</label>
    <select asp-for="Edit">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label>Lent to:</label>
    <input asp-for="Lent" />
    <br />
    <label>Movie notes:</label>
    <input asp-for="Note" />
    <br />

    <button type="submit">Submit Application</button>
</form>