@model App

<h1>Movie Recomendation</h1>
<h3>Enter your movie recomendation below and it will be added to the database</h3>

<form method="post">

    <input type="hidden" asp-for="MovieId"/>

    <label>Movie category:</label>
    <input asp-for="CategoryId"/>
    <br />
    <label>Movie title:</label>
    <input asp-for="Title"/>
    <br />
    <label>Release year:</label>
    <input asp-for="Year"/>
    <br />
    <label>Movie Director:</label>
    <input asp-for="Director"/>
    <br />
    <label>What is the movie rated?</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label> Is the movie edited?</label>
    <select asp-for="Edited">
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <br />
    <label>Lent to:</label>
    <input asp-for="LentTo" />
    <br />
    <label>Copied to Plex?</label>
    <select asp-for="CopiedToPlex">
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <br />
    <label>Movie notes:</label>
    <input asp-for="Notes" />
    <br />

    <button type="submit">Submit Application</button>

    <div asp-validation-summary="All"></div>
</form>